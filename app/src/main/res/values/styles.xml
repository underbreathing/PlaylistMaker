<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabs" parent="Widget.Design.TabLayout">
        <item name="background">@color/white</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="settings_item_in_the_settings_list">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="settings_text_in_the_settings_list">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="settings_text_navigation_panel">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="toolbar_top_back">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
    </style>


    <style name="search_clear_button">
        <item name="tint">@color/text_gray</item>
    </style>

    <style name="search_input_line" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="drawableTint">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

    <style name="textYsRegular16">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textYs500Medium22">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="textYs400Medium22">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textRegular11Gray">
        <item name="android:textColor">@color/text_gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textRegular13Gray">
        <item name="android:textColor">@color/text_gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textRegular13">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text400YsMedium19">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text500YsMedium19">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="text400YsMedium14">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="text500YsMedium14">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
    </style>


    <style name="search_button_update" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="button_top_back_arrow" parent="Widget.AppCompat.Button.Borderless">
        <item name="tint">@color/black</item>
    </style>

</resources>