<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="search_clear_button">
        <item name="tint">@color/black</item>
    </style>

    <style name="search_input_line" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="textYsRegular16">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>
    <style name="textYsMedium22">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="textRegular11Gray">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="fontWeight">400</item>
    </style>
</resources>