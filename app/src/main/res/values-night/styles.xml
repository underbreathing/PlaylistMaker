<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="et_add_playlist" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:paddingHorizontal">@dimen/secondary_text_size</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="frame_line">
        <item name="android:background">@color/white</item>
    </style>

    <style name="bottom_navigation_panel" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/switch_navigation_item_color</item>
        <item name="itemTextColor">@color/switch_navigation_item_color</item>
        <item name="android:background">@color/black</item>

    </style>

    <style name="tabs" parent="Widget.Design.TabLayout">
        <item name="background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_clear_button">
        <item name="tint">@color/black</item>
    </style>

    <style name="search_input_line" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="backgroundTint">@color/white</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="textYsRegular16">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textYs500Medium22">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">500</item>
